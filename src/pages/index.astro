---
import Layout from "../layouts/Layout.astro";
import MoonIcon from "../components/icons/MoonIcon.jsx";
import CrossIcon from "../components/icons/CrossIcon.jsx";
---

<Layout title="Todo App">
	<div
		class="bg-[url('/images/bg-mobile-light.jpg')] bg-gray-300 bg-no-repeat bg-contain min-h-screen"
	>
		<header class="container mx-auto px-4 pt-8">
			<div class="flex justify-between">
				<h1
					class="uppercase text-white px-4 text-3xl font-semibold tracking-[0.5em]"
				>
					Todo
				</h1>
				<button>
					<!-- <img src={Moon} alt={`${Moon ? "moon icon" : "sun icon"}`} /> -->
					<MoonIcon />
				</button>
			</div>
		</header>
		<main class="container mx-auto px-4 mt-8">
			<form
				class="mt-8 flex items-center bg-white rounded-md overflow-hidden gap-4 p-4"
			>
				<span class="rounded-full border-2 w-6 h-6 inline-block"></span>
				<input
					type="text"
					placeholder="Create a new todo..."
					class="w-full outline-none text-gray-400"
				/>
			</form>
			<div class="bg-white rounded-md">
				<article class="flex gap-4 p-4 border-b border-b-gray-400">
					<button class="rounded-full border-2 w-6 h-6 inline-block flex-none"
					></button>
					<p class="text-gray-600 grow">Complete course</p>
					<button class="flex-none">
						<CrossIcon />
					</button>
				</article>
				<article class="flex gap-4 p-4 border-b border-b-gray-300">
					<button class="rounded-full border-2 w-6 h-6 inline-block flex-none"
					></button>
					<p class="text-gray-600 grow">Complete course</p>
					<button class="flex-none">
						<CrossIcon />
					</button>
				</article>
				<article class="flex gap-4 p-4 border-b border-b-gray-300">
					<button class="rounded-full border-2 w-6 h-6 inline-block flex-none"
					></button>
					<p class="text-gray-600 grow">Complete course</p>
					<button class="flex-none">
						<CrossIcon />
					</button>
				</article>
			</div>
			<section class="flex gap-4 px-4 justify-between">
				<span class="text-gray-400">5 items left</span>
				<button class="text-gray-400">Clear Completed</button>
			</section>
		</main>
		<section class="container mx-auto px-4 mt-8">
			<div
				class="bg-white text-gray-400 flex gap-4 p-4 justify-center rounded-md"
			>
				<button class="hover:text-blue-600">All</button>
				<button class="hover:text-blue-600">Active</button>
				<button class="hover:text-blue-600">Completed</button>
			</div>
		</section>
		<p class="text-center mt-8 text-gray-400">Drag and drop to reorder list</p>
	</div>
</Layout>
